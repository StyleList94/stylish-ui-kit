{
  "name": "stylish-ui-kit",
  "version": "2.1.0",
  "description": "Stylish UI kit for React applications",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/main.umd.js",
  "module": "./dist/main.es.js",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.es.js",
      "require": "./dist/main.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "StyleList94",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StyleList94/stylish-ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/StyleList94/stylish-ui-kit/issues"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx)": "pnpm run lint"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@storybook/addon-docs": "^9.0.10",
    "@storybook/addon-onboarding": "^9.0.10",
    "@storybook/react-vite": "^9.0.10",
    "@tailwindcss/vite": "^4.1.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.17.48",
    "@types/react": "^18",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "9.0.10",
    "globals": "^16.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "storybook": "^9.0.10",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  }
}
